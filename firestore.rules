rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function: Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function: Check if user is member of household
    // Used for subcollections where we don't have access to the household doc's memberUids field directly
    function isMemberOf(householdId) {
      return isAuthenticated() &&
             exists(/databases/$(database)/documents/households/$(householdId)/members/$(request.auth.uid));
    }

    // Helper function: Check if user is admin of household
    function isAdminOf(householdId) {
      return isAuthenticated() &&
             get(/databases/$(database)/documents/households/$(householdId)/members/$(request.auth.uid)).data.role == 'admin';
    }

    // Households collection
    match /households/{householdId} {
      // üõ°Ô∏è SENTINEL SECURITY FIX: Prevent IDOR/Information Disclosure
      // Only members can read the household document.
      // OPTIMIZATION: Check memberUids array on the document itself to avoid an extra read cost (exists() call).
      // This aligns with the list rule below.
      allow get: if (isAuthenticated() && request.auth.uid in resource.data.memberUids) || request.auth.uid == "REPLACE_WITH_ADMIN_UID";

      // Allow listing only if user is a member (prevents enumeration of all households)
      // Admin can list all households for the AI Meter
      allow list: if (request.auth.uid in resource.data.memberUids) || request.auth.uid == "REPLACE_WITH_ADMIN_UID";

      allow create: if isAuthenticated();
      // Allow update if member (but cannot modify immutable fields).
      // üõ°Ô∏è SECURITY FIX: Updates are ONLY allowed if isMemberOf(householdId) returns true.
      // This implicitly requires the user to have a valid member document in the members/ subcollection.
      // Since creating a member document requires validating the invite code (see members create rule),
      // this ensures that no one can add themselves to memberUids without a valid invite.
      allow update: if isMemberOf(householdId) &&
                        // Prevent modification of immutable fields
                        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['createdBy', 'createdAt', 'inviteCode']) &&
                        // üõ°Ô∏è SENTINEL FIX: Restrict memberUids modifications
                        // 1. Adding members: Only allow adding YOURSELF (request.auth.uid). Prevents adding unauthorized users.
                        (
                          !request.resource.data.diff(resource.data).affectedKeys().hasAny(['memberUids']) ||
                          (
                            request.resource.data.memberUids.toSet().difference(resource.data.memberUids.toSet()).size() == 0 ||
                            (
                              request.resource.data.memberUids.toSet().difference(resource.data.memberUids.toSet()).size() == 1 &&
                              request.resource.data.memberUids.toSet().difference(resource.data.memberUids.toSet()).hasAny([request.auth.uid])
                            )
                          )
                        ) &&
                        // 2. Removing members: Admin can remove anyone. Users can only remove THEMSELVES.
                        (
                          !request.resource.data.diff(resource.data).affectedKeys().hasAny(['memberUids']) ||
                          isAdminOf(householdId) ||
                          (
                            resource.data.memberUids.toSet().difference(request.resource.data.memberUids.toSet()).size() == 0 ||
                            (
                              resource.data.memberUids.toSet().difference(request.resource.data.memberUids.toSet()).size() == 1 &&
                              resource.data.memberUids.toSet().difference(request.resource.data.memberUids.toSet()).hasAny([request.auth.uid])
                            )
                          )
                        );
      allow delete: if isAdminOf(householdId);

      // Members subcollection
      match /members/{memberId} {
        // Allow users to read their own member doc (to check if already joined) or if they're a member
        allow read: if isMemberOf(householdId) || request.auth.uid == memberId;

        // Secure creation: Must be creator OR provide valid invite code
        // - Household creator can create their member doc with any role.
        // - Invite-based joins must not assign themselves an admin role.
        allow create: if isAuthenticated() && request.auth.uid == memberId && (
          // Case 1: Household creator (admin) - createdBy check
          get(/databases/$(database)/documents/households/$(householdId)).data.createdBy == request.auth.uid ||
          // Case 2: Joining via Invite Code (non-creator)
          (
            request.resource.data.inviteCode != null &&
            exists(/databases/$(database)/documents/inviteCodes/$(request.resource.data.inviteCode)) &&
            get(/databases/$(database)/documents/inviteCodes/$(request.resource.data.inviteCode)).data.householdId == householdId &&
            (
              // Non-creators joining via invite cannot assign themselves admin role
              !request.resource.data.keys().hasAny(['role']) ||
              request.resource.data.role != 'admin'
            )
          )
        );

        // Security Fix: Prevent IDOR (Insecure Direct Object Reference)
        // Previous rule allowed ANY member to update ANY other member's non-role fields.
        // New rule restricts updates to:
        // 1. The user themselves (but they cannot change their own role)
        // 2. Household Admins (can update any field including role)
        allow update: if isMemberOf(householdId) && (
          // Case 1: User updating their own profile (cannot change role)
          (request.auth.uid == memberId && !request.resource.data.diff(resource.data).changedKeys().hasAny(['role'])) ||
          // Case 2: Admin updating any member (including role)
          isAdminOf(householdId)
        );

        allow delete: if isAdminOf(householdId) || request.auth.uid == memberId;
      }

      // Habits subcollection
      match /habits/{habitId} {
        allow read: if isMemberOf(householdId);
        allow write: if isMemberOf(householdId);

        // Habit submissions subcollection
        match /submissions/{submissionId} {
          allow read: if isMemberOf(householdId);
          allow write: if isMemberOf(householdId);
        }
      }

      // All other subcollections (accounts, buckets, transactions, etc.)
      match /{subcollection}/{document} {
        allow read: if isMemberOf(householdId);
        allow write: if isMemberOf(householdId);
      }
    }

    // Invite codes collection
    match /inviteCodes/{code} {
      allow get: if isAuthenticated(); // Prevent listing (Information Disclosure)
      allow list: if false;
      // Only household creators can create invite codes
      allow create: if isAuthenticated() &&
                    get(/databases/$(database)/documents/households/$(request.resource.data.householdId)).data.createdBy == request.auth.uid;
      allow update, delete: if false; // Invite codes shouldn't be modified or deleted
    }

    // Global App Config (Kill Switch)
    match /app_config/global {
      allow read: if true;
      allow write: if request.auth.uid == "REPLACE_WITH_ADMIN_UID"; // TODO: Replace with actual Admin UID
    }

    // Beta Testers
    match /beta_testers/{email} {
      allow read: if isAuthenticated();
      allow write: if request.auth.uid == "REPLACE_WITH_ADMIN_UID"; // TODO: Replace with actual Admin UID
    }

    // Feedback Reports
    match /feedback/{reportId} {
      allow create: if isAuthenticated();
      allow read, delete: if request.auth.uid == "REPLACE_WITH_ADMIN_UID"; // TODO: Replace with actual Admin UID
    }

    // AI Usage Logs
    match /logs/ai_usage/requests/{requestId} {
      allow create: if isAuthenticated();
      allow read: if request.auth.uid == "REPLACE_WITH_ADMIN_UID"; // TODO: Replace with actual Admin UID
    }
  }
}
