rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function: Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function: Check if user is member of household
    function isMemberOf(householdId) {
      return isAuthenticated() &&
             exists(/databases/$(database)/documents/households/$(householdId)/members/$(request.auth.uid));
    }

    // Helper function: Check if user is admin of household
    function isAdminOf(householdId) {
      return isAuthenticated() &&
             get(/databases/$(database)/documents/households/$(householdId)/members/$(request.auth.uid)).data.role == 'admin';
    }

    // Households collection
    match /households/{householdId} {
      // Allow any authenticated user to read (needed for joining via invite code)
      allow read: if isAuthenticated();
      allow list: if isAuthenticated(); // Allow querying for households user belongs to
      allow create: if isAuthenticated();
      // Allow update if member, OR if only adding self to memberUids (for joining via invite)
      allow update: if isMemberOf(householdId) ||
                       (isAuthenticated() &&
                        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['memberUids']) &&
                        request.auth.uid in request.resource.data.memberUids &&
                        !(request.auth.uid in resource.data.memberUids));
      allow delete: if isAdminOf(householdId);

      // Members subcollection
      match /members/{memberId} {
        // Allow users to read their own member doc (to check if already joined) or if they're a member
        allow read: if isMemberOf(householdId) || request.auth.uid == memberId;

        // Secure creation: Must be creator OR provide valid invite code
        allow create: if isAuthenticated() && request.auth.uid == memberId && (
          // Case 1: Household creator (admin) - createdBy check
          get(/databases/$(database)/documents/households/$(householdId)).data.createdBy == request.auth.uid ||
          // Case 2: Joining via Invite Code
          (
            request.resource.data.inviteCode != null &&
            exists(/databases/$(database)/documents/inviteCodes/$(request.resource.data.inviteCode)) &&
            get(/databases/$(database)/documents/inviteCodes/$(request.resource.data.inviteCode)).data.householdId == householdId
          )
        );

        allow update: if isMemberOf(householdId);
        allow delete: if isAdminOf(householdId) || request.auth.uid == memberId;
      }

      // Habits subcollection
      match /habits/{habitId} {
        allow read: if isMemberOf(householdId);
        allow write: if isMemberOf(householdId);

        // Habit submissions subcollection
        match /submissions/{submissionId} {
          allow read: if isMemberOf(householdId);
          allow write: if isMemberOf(householdId);
        }
      }

      // All other subcollections (accounts, buckets, transactions, etc.)
      match /{subcollection}/{document} {
        allow read: if isMemberOf(householdId);
        allow write: if isMemberOf(householdId);
      }
    }

    // Invite codes collection
    match /inviteCodes/{code} {
      allow get: if isAuthenticated(); // Prevent listing (Information Disclosure)
      allow list: if false;
      allow create: if isAuthenticated();
      allow update, delete: if false; // Invite codes shouldn't be modified or deleted
    }
  }
}
